{
  "name": "confluence-smart-publisher",
  "displayName": "Confluence-Smart-Publisher",
  "description": "Publique facilmente páginas no Confluence diretamente do seu VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:confluence"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "confluence-smart-publisher.publishConfluence",
        "title": "Publicar no Confluence"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "confluence-smart-publisher.publishConfluence",
          "when": "resourceExtname == .confluence",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": {
      "title": "Confluence Smart Publisher",
      "properties": {
        "confluenceSmartPublisher.baseUrl": {
          "type": "string",
          "default": "",
          "description": "URL base da sua instância Confluence (ex: https://empresa.atlassian.net/wiki)"
        },
        "confluenceSmartPublisher.username": {
          "type": "string",
          "default": "",
          "description": "Usuário do Confluence (normalmente o e-mail)"
        },
        "confluenceSmartPublisher.apiToken": {
          "type": "string",
          "default": "",
          "description": "API Token do Confluence (gere em https://id.atlassian.com/manage-profile/security/api-tokens)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
